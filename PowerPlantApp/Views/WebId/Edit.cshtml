@model PowerPlantApp.Models.PowerPlant

@{
    ViewBag.Title = "Güç Santralini Düzenle";
    Layout = "_Layout";
}


<div>
    <h2>@ViewBag.Title</h2>
</div>

<div class="col-12 col-md-6 d-flex">
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ad</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Tip</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
</div>