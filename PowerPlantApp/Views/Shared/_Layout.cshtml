<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PowerPlantApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>
</head>
<body>

<div class="wrapper">
    <aside id="sidebar">
        <!-- Sidebar content -->
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#">Enerjisa Üretim</a>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Home")" class="sidebar-link">
                        <i class="fa-solid fa-house" style="color:#ffff"></i>
                        Ana Sayfa
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#listing"
                       aria-expanded="false">
                        <i class="fa-solid fa-list" style="color:#ffff"></i>
                        Güç Santrali İşlemleri
                    </a>
                    <ul id="listing" class="sidebar-dropdown list-unstyled collapse">
                        <li class="sidebar-item">
                            <a href="@Url.Action("Add", "WebId")" class="sidebar-link">Ekle</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("List", "WebId")" class="sidebar-link">Listele</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </aside>

    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <button class="btn" id="sidebar-toggle" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex justify-content-end align-items-center w-100">
                <div class="d-flex justify-content-end align-items-center">
                    <span class="navbar-text me-3 text-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <text>Hoşgeldin, @ViewBag.UserEmail</text>
                        }
                        else
                        {
                            <text>Hoşgeldin, Ziyaretçi</text>
                        }
                    </span>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Çıkış Yap</button>
                        </form>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Giriş Yap</a>
                    }
                </div>
            </div>
        </nav>

        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="row">
                    
                        @RenderBody()
                   
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/41443edabc.js" crossorigin="anonymous"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
